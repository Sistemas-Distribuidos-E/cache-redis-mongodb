<h1>Agregar un fallecido</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form method="POST" action="/user/add">
  <div class="form-group">
    <label>ID</label>
    <input type="text" name="id" class="form-control" placeholder="Add ID">
  </div>
  <div class="form-group">
    <label>Nombres</label>
    <input type="text" name="nombres" class="form-control" placeholder="Nombres del fallecido">
  </div>
  <div class="form-group">
    <label>Apellidos</label>
    <input type="text" name="last_name" class="form-control" placeholder="Apellidos del fallecido">
  </div>
  <div class="form-group">
    <label>Fecha de defunci√≥n</label>
    <input type="text" name="fecha" class="form-control" placeholder="DD/MM/YYYY">
  </div>
  <div class="form-group">
    <label>Nombre del cementerio</label>
    <input type="text" name="cementerio" class="form-control" placeholder="Ingrese el nombre del cementerio">
  </div>
  <input type="submit" class="btn btn-primary" value="Guardar">
</form>
